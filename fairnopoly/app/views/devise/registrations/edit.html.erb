<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :email, :hint => "Enter your email address" %>
    <%= f.input :password, :hint => "Enter new password (leave blank if you don't want to change it)" %>
    <%= f.input :password_confirmation, :hint => "Confirm new password" %>
    <%= f.input :current_password, :hint => "Enter current password (we need your current password to confirm your changes)" %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button :button_html => {:class => "primary"} %>
  <% end %>
<% end %>
<h3>Cancel my account</h3>
 
<p class="well">Unhappy? 
	<%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>
 
<%= link_to "Back", :back %>