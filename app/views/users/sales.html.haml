= render_box "offers", :content_class => "padding-box" do
  - if !@offers || @offers.empty?
    .fairnopoly-well
      %strong= t('users.text.no_offers')
  - else
    = render :partial=>'/shared/list_articles', :locals=>{ :articles=> @offers, :list_class=>"span3"}
    = will_paginate @offers, :params => {:anchor => "offers" } , :param_name => "offers_page"
- if !@inactive.empty?
  = render_box "inactive",:content_class => "padding-box" do
    = render :partial=>'/shared/list_articles', :locals=>{ :articles=> @inactive, :list_class=>"span3"}
    = will_paginate @inactive, :params => {:anchor => "inactive" } , :param_name => "inactive_page"
= render_box "sold" do
  %strong= t('users.text.soon_sold')
= render_box "my_article_templates" do
  .private-links
    %ul.nav.nav-pills
      %li
        = link_to t('article_templates.actions.new'), new_article_template_path
  = render :partial => "article_templates/table"
