.Article-form.Accordion--activated
  = semantic_form_for resource, :builder => Fairtastic::FormBuilder do |f|
    = f.input_step "template" do
      .Accordion-step
        = f.inputs do
          = f.input :name
    = f.semantic_fields_for :article do |article_form|
      = render :partial => "/articles/form/common_inputs", :locals => {:f => article_form}
    = f.actions do
      = f.action :submit , :button_html => {:class => "Btn" }