- if current_user.article_templates.any?
  = semantic_form_for(:template_select, :url => new_article_path, :html => { :method => :get}, :builder => Fairtastic::FormBuilder) do |f|
    = f.input_step :apply do
      .Accordion-step
        - if block_given?
          = yield
        = f.inputs do
          = f.input :article_template, :collection => current_user.article_templates, :prompt => t('template_select.prompts.article_templates')
        = f.actions do
          = f.action :submit, :button_html => {:class => "Btn Btn--green"}
