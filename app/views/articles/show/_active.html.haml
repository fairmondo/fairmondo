.span3
  = render :partial=>'/shared/profile_img', :locals=>{:user => @article.seller}
  #other_products.box
    .box-legend
      %a{:href => "#other_products"}
        %h6
          = t('article.titles.other-products')
          (#{@seller_products.count})
    .box-content
      = render :partial=>'/shared/list_articles_small', :locals=>{ :articles=> @seller_products, :paginate => true, :list_class=>"span4", :anchor=> "other_products"}
  #library.box
    .box-legend
      %a{:href => "#library"}
        %h6
          = t('article.titles.libraries')
          (#{@libraries.count})
    .box-content
      - @libraries.each do |library|
        .well-column-small-padding
          .row-fluid
            .span8
              = link_to library.name, user_libraries_path(:user_id => library.user , :anchor => "library"+library.id.to_s)
              %p
                = t('common.text.from') + " " + library.user.nickname
            .span4
              = link_to image_tag(library.user.image.url(:thumb)), user_path(:id => library.user.id)
      = will_paginate @libraries,:params => {:anchor => "library" }
