.User-info
  - if defined?(show_title) && show_title
    %h3.User-title Anbieter*in
  .User-image
    - if user.is_pioneer?
      = image_tag "pionierbutton.png", :class => "pioneer-button"
    %a{:href => user_path(user)}
      = image_tag(user.image_url(:profile), :class => "profile-pic")
  %p.User-name
    = user.name
    %br/
    - if user.is_a?(LegalEntity)
      = user.fullname

  %p.User-legal

    - if user.is_a?(LegalEntity) && !user.ngo
      %a.Icon{:href => "#"}
        %i.icon-briefcase
        = link_to(t('users.legal_status.show.legal_entity'), profile_user_path(user))
    - elsif user.ngo
      %a.Icon{:href => "#"}
        %i.icon-briefcase
        = link_to(t('users.legal_status.show.ngo'), profile_user_path(user))
    - else
      %a.Icon{:href => ""}
        %i.icon-user
        = link_to(t('users.legal_status.show.private_user'), profile_user_path(user))
