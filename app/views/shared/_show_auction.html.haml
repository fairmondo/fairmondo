
.thumbnail.white
  .in-image-container
    - if auction.title_image
      = link_to image_tag(auction.title_image.image.url(:thumb)), auction_path(auction,:auction => params[:auction])
    - else
      = link_to image_tag("missing.png" ), auction_path(auction,:auction => params[:auction])
    = features_label auction, "in-image-alt"
    = condition_label auction, "in-image"
  .caption
    %h5= link_to truncate(auction.title, :length => 25), auction_path(auction,:auction => params[:auction])
    %h5= humanized_money_with_symbol auction.price