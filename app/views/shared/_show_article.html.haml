%figure.Article-image
  - if article.title_image
    = link_to image_tag(article.title_image.image.url(:thumb)), article_path(article,:article => params[:article])
  - else
    = link_to image_tag("missing.png"), article_path(article,:article => params[:article])

.Article-info
  %h3.Articles-title= link_to truncate(article.title, :length => 25), article_path(article,:article => params[:article])
  %p.Article-price= humanized_money_with_symbol article.price
  = render 'articles/show/vat' , :article => article
  = render '/articles/show/basic_price',  :article=> article
.Article-tags
  = condition_label article
  = features_label article