.Accordion-item{:id => accordion_name}
	%a{:href => "##{accordion_name}", :class => "Accordion-header #{accordion_header_class}"}
		%i.icon-arrow

		%span.content
			= accordion_title

		-if accordion_number
			%span.number
				= accordion_number

		-if accordion_tooltip
			%i.icon-helper{:title => accordion_tooltip}

	.Accordion-content
		= yield