.libraries
  - if !@libraries.blank?
    - @libraries.each_with_index do |library|
      - unless library.library_elements.empty?
        %details{id: "library#{library.id.to_s}"}
          %summary= library_header_layout(library)
          = render "library", :library => library

    = paginate @libraries
  - else
    = t('libraries.no_library')
