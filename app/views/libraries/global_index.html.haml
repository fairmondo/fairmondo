.libraries
  - if !@libraries.blank?
    .Accordion.Accordion--scrollToActive
      - @libraries.each do |library|
        - unless library.library_elements.empty?
          = accordion_item "library"+library.id.to_s, :title => library_header_layout(library), :arrow => false do
            .library-actions
              = link_to user_path(library.user), :class => "Button" do
                = t('users.actions.show_account')
                = t('common.text.glue.from')
                = library.user_nickname
              = link_to library_path(library), :class => "Button" do
                = t('library.show')
              = link_to library_hearts_path(library), class: "Button hearts-button", method: :post, remote: true do
                = "Add Heart"
            = render "library", :library => library

    = paginate @libraries
  - else
    = t('libraries.no_library')
