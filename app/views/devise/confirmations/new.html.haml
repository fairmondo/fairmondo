.well
  %h2= t('devise.confirmation.resend')
  = semantic_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
    = f.semantic_errors
    = f.inputs do
      = f.input :email
    = f.actions do
      = f.action :submit, :button_html => {:class => "primary", :value => t('devise.confirmation.resend')}
  = render "links"
