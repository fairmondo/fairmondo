.well
  %h2= t('user.reset.title')
  = semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    = f.semantic_errors
    = f.inputs do
      = f.input :email
    = f.actions do
      = f.action :submit, :button_html => {:class => "primary", :value => t('user.reset.request')}
  = render "links"
